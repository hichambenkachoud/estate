{% extends 'base-back.html.twig' %}

{% block title %}
    {{ 'admin.adverts.type.management' | trans }}
{% endblock %}
{% block body %}
    <header class="page-header">
        <h2>{{ 'admin.adverts.type.management' | trans }}</h2>

        <div class="right-wrapper text-right">
            <ol class="breadcrumbs">
                <li>
                    <span><i class="fas fa-tasks"></i></span>
                </li>
                <li><span>{{ 'admin.adverts.type' | trans }}</span></li>
                <li><span>{{ 'admin.details' | trans }}</span></li>
            </ol>

            <a class="sidebar-right-toggle" href="#"></a>
        </div>
    </header>
    <div class="row">
        <div class="col-md-8">
            <section class="card card-warning">
                <header class="card-header">
                    <h2 class="card-title">{{ 'admin.informations' | trans }}</h2>
                </header>
                <div class="card-body">
                    <table class="table">
                        <tbody>
                        <tr>
                            <th>{{ 'admin.id' | trans }}</th>
                            <td>{{ advert_type.id }}</td>
                        </tr>
                        <tr>
                            <th>{{ 'admin.code' | trans }}</th>
                            <td>{{ advert_type.code }}</td>
                        </tr>
                        <tr>
                            <th>{{ 'admin.name' | trans }}</th>
                            <td>{{ advert_type.name }}</td>
                        </tr>
                        <tr>
                            <th>{{ 'admin.status' | trans }}</th>
                            <td>{{ advert_type.enabled ? 'Yes' : 'No' }}</td>
                        </tr>
                        <tr>
                            <th>{{ 'admin.create_date' | trans }}</th>
                            <td>{{ advert_type.createDate ? advert_type.createDate|date('Y-m-d H:i:s') : '' }}</td>
                        </tr>
                        </tbody>
                    </table>
                </div>
            </section>
        </div>

        <div class="col-md-4">
            <section class="card card-warning">
                <header class="card-header">
                    <h2 class="card-title">{{ 'admin.actions' | trans }}</h2>
                </header>
                <div class="card-body">
                    <a href="{{ path('advert_type_index') }}"
                       class="btn btn-info btn-sm">{{ 'admin.backtolist' | trans }}</a>

                    <a href="{{ path('advert_type_edit', {'id': advert_type.id}) }}"
                       class="btn btn-success btn-sm">{{ 'admin.update' | trans }}</a>

                    {{ include('backend/advert_type/_delete_form.html.twig') }}
                </div>
            </section>
        </div>
    </div>
{% endblock %}
