<!DOCTYPE html>
<html class="sidebar-left-big-icons">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <!-- Mobile Metas -->
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no"/>

    <title>{% block title %}{{ 'title'|trans }}{% endblock %}</title>
    {% block stylesheets %}
        {% include('backend/includes/include-css.html.twig') %}
    {% endblock %}
</head>
<body>

<section class="body-sign">
    <div class="center-sign">
        <a href="/" class="logo float-left">
            <img src="{{ asset('public/img/logo.png') }}" height="54" alt="Porto Admin"/>
        </a>

        <div class="panel card-sign">
            <div class="card-title-sign mt-3 text-right">
                <h2 class="title text-uppercase font-weight-bold m-0"><i
                            class="fas fa-user mr-1"></i> {{ 'admin.register' | trans }} </h2>
            </div>
            <div class="card-body">
                <form action="{{ path('security_register') }}" method="post" novalidate>
                <div class="form-group mb-3">
                    {{ include('backend/includes/include-flash.html.twig') }}
                    {% if form.vars.errors.form.getErrors(true) | length > 0 %}
                        <div class="alert alert-danger">
                            <ul>
                                {% for error in form.vars.errors.form.getErrors(true) %}
                                    <li>{{ error.message }}</li>
                                {% endfor %}
                            </ul>
                        </div>
                    {% endif %}
                </div>
                <div class="form-group mb-3">
                    {{ form_label(form.email) }}
                    {{ form_widget(form.email) }}
                </div>

                <div class="form-group mb-0">
                    <div class="row">
                        <div class="col-sm-6 mb-3">
                            {{ form_label(form.password.first) }}
                            {{ form_widget(form.password.first) }}
                        </div>
                        <div class="col-sm-6 mb-3">
                            {{ form_label(form.password.second) }}
                            {{ form_widget(form.password.second) }}
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-sm-8">

                    </div>
                    <div class="col-sm-4 text-right">
                        <button type="submit" class="btn btn-primary mt-2">{{ 'admin.signup' | trans }}</button>
                    </div>
                </div>

                <span class="mt-3 mb-3 line-thru text-center text-uppercase">

							</span>

                <div class="mb-1 text-center">

                </div>

                <p class="text-center">{{ 'admin.already.have_account' |trans }} <a href="{{ path('security_login') }}">{{ 'admin.signin' |trans }}</a></p>
                {{ form_rest(form) }}
                </form>
            </div>
        </div>

        <p class="text-center text-muted mt-3 mb-3">&copy; Copyright 2020. All Rights Reserved.</p>
    </div>
</section>

{% block javascripts %}
    {% include('backend/includes/include-js.html.twig') %}
{% endblock %}
</body>
</html>
